<div class="auth-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2 class="text-center">Forgot your password?</h2>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-envelope"></i>
          </span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'E-mail' %>

        <% if resource.errors[:email].any? %>
          <div class="invalid-feedback">
            <%= resource.errors[:email].first %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary login-btn btn-block' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
