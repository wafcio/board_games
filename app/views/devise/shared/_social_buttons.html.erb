<p class="text-center">Login with your social media account</p>
<div class="text-center">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-social btn-#{normalized_provider(provider)}" do %>
        <i class="fa fa-<%= normalized_provider(provider) %>"></i>&nbsp; <%= OmniAuth::Utils.camelize(normalized_provider(provider)) %>
      <% end %>
    <% end -%>
  <% end -%>
</div>
